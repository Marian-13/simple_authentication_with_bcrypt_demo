<%= label_tag :password, 'Password:' %>

<% if flash[:notice_password_errors] %>
  <%= password_field_tag :password, nil, class: 'form-control log-in-field-with-error',
                                         placeholder: 'Enter password',
                                         onkeydown: "Sessions.focusOn('submit')" %>

  <% flash[:notice_password_errors].each do |message| %>
    <%= content_tag :div, class: 'alert alert-danger log-in-error' do %>
      <%= message %>
    <% end %>
  <% end %>
<% else %>
  <%= password_field_tag :password, nil, class: 'form-control',
                                         placeholder: 'Enter password',
                                         onkeydown: "Sessions.focusOn('submit')" %>
<% end %>

<br />
