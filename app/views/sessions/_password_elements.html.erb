<%= label_tag :password, 'Password:' %>

<% if flash[:notice_password_errors] %>
  <%= render 'password_field', class_name: 'form-control log-in-field-with-error' %>

  <% flash[:notice_password_errors].each do |message| %>
    <%= content_tag :div, class: 'alert alert-danger log-in-error' do %>
      <%= message %>
    <% end %>
  <% end %>

  <% flash[:notice_password_errors] = nil %>
<% else %>
  <%= render 'password_field', class_name: 'form-control' %>
<% end %>

