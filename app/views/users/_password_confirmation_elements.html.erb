<%= form.label :password_confirmation, 'Password Confirmation:' %>

<% if !user.errors[:password_confirmation].blank? %>
  <%= render 'password_confirmation_field', form: form, class_name: 'form-control sign-up-field-with-error' %>

  <% user.errors.full_messages_for(:password_confirmation).each do |message| %>
    <%= content_tag :div, class: 'alert alert-danger sign-up-error' do %>
      <%= message %>
    <% end %>
  <% end %>

<% else %>
  <%= render 'password_confirmation_field', form: form, class_name: 'form-control' %>
<% end %>

