<%= form.label :password, 'Password:' %>

<% if !user.errors[:password].blank? %>
  <%= render 'password_field', form: form, class_name: 'form-control sign-up-field-with-error' %>

  <% user.errors.full_messages_for(:password).each do |message| %>
    <%= content_tag :div, class: 'alert alert-danger sign-up-error' do %>
      <%= message %>
    <% end %>
  <% end %>

<% else %>
  <%= render 'password_field', form: form, class_name: 'form-control' %>
<% end %>

