<%= form.label :name, 'Name:' %>

<% if !user.errors[:name].blank? %>
  <%= render 'name_field', form: form, class_name: 'form-control sign-up-field-with-error' %>

  <% user.errors.full_messages_for(:name).each do |message| %>
    <%= content_tag :div, class: 'alert alert-danger sign-up-error' do %>
      <%= message %>
    <% end %>
  <% end %>

<% else %>
  <%= render 'name_field', form: form, class_name: 'form-control' %>
<% end %>

